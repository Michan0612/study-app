%body
  %header
    .container
      %nav.navbar.navbar-expand-md.navbar-dark.fixed-top.navbar-extend
        %a.navbar-brand{:herf => "#"}
          .navbar-brand-extend
            = link_to image_tag('logo.png', width: 50), root_path, class: "logo-img"
 
        %button.navbar-toggler{"data-target" => "#menu", "data-toggle" => "collapse"}
          %span.navbar-toggler-icon
        #menu.collapse.navbar-collapse
          %ul.navbar-nav.navbar-nav-extend.ml-auto
            - if user_signed_in?
              %li.nav-item.nav-item-extend= link_to "記録画面へ", user_path(current_user.id), class: "btn btn-info btn-md btn-extend"
              %li.nav-item.nav-item-extend= link_to "プロフィール", edit_user_registration_path, class: "btn btn-secondary btn-md btn-extend"
              %li.nav-item.nav-item-extend= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-md btn-extend btn-logout-extend"
            - else
              %li.nav-item.nav-item-extend= link_to "新しくはじめる", new_user_registration_path, class: "btn btn-info btn-md btn-extend"
              %li.nav-item.nav-item-extend= link_to "ログイン", new_user_session_path, class: "btn btn-info btn-md"

