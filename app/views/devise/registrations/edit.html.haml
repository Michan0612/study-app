.container
  %h2.text
    登録情報の変更 
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "text"

    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .field
      = f.label :password, class: "text"
        
      %i.text (変更しない場合は空欄)
      = f.password_field :password, autocomplete: "new-password", class: "text"
      - if @minimum_password_length
        %br/

    .field
      = f.label :password_confirmation, class: "text"
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "text"
    .field
      = f.label :current_password, class: "text"
      %br/
      = f.password_field :current_password, autocomplete: "current-password", class: "text"
    .actions
      = f.submit "更新", class: "text"
  %h3.text アカウントの削除
  %p
    #{button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "text"}
  = link_to "戻る", :back
